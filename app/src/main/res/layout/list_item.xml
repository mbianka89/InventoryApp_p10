<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_colour"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/list_item_product_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/android_wear"
        android:layout_gravity="bottom">

    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/list_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android wear" />

        <TextView
            android:id="@+id/list_item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="169Â£"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(61 available)" />


    </LinearLayout>

    <ImageView
        android:id="@+id/shop"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_shopping_cart_black_24dp"
        android:layout_gravity="bottom"></ImageView>

</LinearLayout>